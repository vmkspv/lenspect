import gettext
import locale
import signal
import sys

VERSION = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('lenspect', localedir)
locale.textdomain('lenspect')
gettext.install('lenspect', localedir)

if __name__ == '__main__':
    from gi.repository import Gio, GLib

    resource = Gio.Resource.load(GLib.build_filenamev([pkgdatadir, 'lenspect.gresource']))
    resource._register()

    from lenspect import main
    sys.exit(main.main(VERSION))